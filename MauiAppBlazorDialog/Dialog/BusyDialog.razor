<div class="dialogOut" style="display: @showState;">
    <div style="display: grid; width: 100%; height: 100vh;">
        <div class="busy-ring" style="justify-self: center; align-self: center;"></div>
    </div>
</div>

@code {

    bool isShow = false;
    string showState => isShow ? "block" : "none";

    public void Show()
    {
        isShow = true;
        StateHasChanged();
    }

    public void Hide()
    {
        isShow = false;
        StateHasChanged();
    }
}
